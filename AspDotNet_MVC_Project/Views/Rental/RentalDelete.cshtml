@model AspDotNet_MVC_Project.Models.Rental

<h2>Delete Rental</h2>

<h3>Are you sure you want to delete this rental?</h3>
<div>
    <h4>Rental</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Car:</dt>
        <dd class="col-sm-10">@Model.Car.Make, @Model.Car.Model</dd>

        <dt class="col-sm-2">Customer:</dt>
        <dd class="col-sm-10">@Model.Customer.Name</dd>

        <dt class="col-sm-2">Rental Date:</dt>
        <dd class="col-sm-10">@Model.RentalDate.ToString("dd/MM/yyyy HH:mm")</dd>

        <dt class="col-sm-2">Return Date:</dt>
        <dd class="col-sm-10">@Model.ReturnDate.ToString("dd/MM/yyyy HH:mm")</dd>

        <dt class="col-sm-2">Total Price:</dt>
        <dd class="col-sm-10">@Model.TotalPrice</dd>
    </dl>

    <form asp-action="RentalDeleteConfirm">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="RentalList">Cancel</a>
    </form>
</div>